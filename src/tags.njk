---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: base.njk
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag | slug }}/
---

<h1>Tagged “{{ tag }}”</h1>
<div class="posts">
  {% set postslist = collections[ tag ] %}
  <ul>
    {% for post in postslist | reverse %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </li>
    {% endfor %}
  </ul>
</div>
<p>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>
